{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [ "es2015" ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
    },
    "includes": [
        "src/**/*"
    ]
}